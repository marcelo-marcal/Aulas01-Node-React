{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2016",

    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "node",

    /* Emit */
     "outDir": "./build",

    /* Interop Constraints */    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */    
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}